#!/bin/sh

#
#  out of source build of MusE
#     all generated files go into subdirectory "build"
#

if test ! -d build; 
   then
      echo "+creating build directory"
      mkdir build
      echo "+entering build directory"
      cd build

      # HACK:
      cp ../muse/all.h .

      echo "+calling cmake"
      cmake ../muse
   else
      echo "+entering build directory"
      cd build
   fi

echo "+start top level make..."
make

